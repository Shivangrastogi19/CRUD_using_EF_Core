@using Model;
@model Employee;

@{
	Layout = "";
	ViewData["Title"] = "Edit Employee";
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>EditEmployee</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- MATERIAL DESIGN ICONIC FONT -->
	<link rel="stylesheet" href="~/FormTemplate/formfonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

	<!-- STYLE CSS -->
	<link rel="stylesheet" href="~/FormTemplate/css/style.css">
</head>

<body>

	<div class="wrapper">
		<div class="inner">
			<form method="post">
				<h3>@ViewData["Title"]</h3>
				<label class="form-group">
					<input asp-for="EmployeeId" type="text" class="form-control" type="hidden" >
					<input asp-for="Name" type="text" class="form-control" required>
					<span asp-for="Name">Your Name</span>
					<span class="border"></span>
				</label>
				<label class="form-group">
					<input asp-for="Email" type="text" class="form-control" required>
					<span asp-for="Email">Your Mail</span>
					<span class="border"></span>
				</label>
				<label class="form-group">
					<input asp-for="Contact" type="text" class="form-control" required>
					<span asp-for="Contact">Your Contact</span>
					<span class="border"></span>
				</label>
				<label class="form-group">
					<input asp-for="Addres" type="text" class="form-control" required>
					<span asp-for="Addres">Your Address</span>
					<span class="border"></span>
				</label>

				<button>
					Submit
					<i class="zmdi zmdi-arrow-right"></i>
				</button>
			</form>
		</div>
	</div>

</body>
</html>

